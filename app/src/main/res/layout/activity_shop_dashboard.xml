<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout"
            android:layout_marginTop="20dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:id="@+id/trappyName"
                android:text="Trappy Shop"
                android:textSize="24sp"
                android:textColor="@color/lavender"
                android:layout_marginStart="18dp"
                android:layout_marginTop="52dp"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/trappyImage"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/trappyDesc"
                android:text="Compra aquí tus objetos"
                android:textSize="14sp"
                android:layout_marginStart="18dp"
                android:textColor="@color/lavender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trappyName"
                app:layout_constraintEnd_toStartOf="@+id/trappyImage" android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/trappyImage"
                android:src="@drawable/trappy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/trappyName"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:id="@+id/row1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trappyImage">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/botasCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/botasName"
                            android:text="Botas"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/botasImage"/>
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/botasImage"
                            android:src="@drawable/botas"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/espadaCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/espadaName"
                            android:text="Espada"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/espadaImage"/>
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/espadaImage"
                            android:src="@drawable/espada"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:id="@+id/row2"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row1">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pocionCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pocionName"
                            android:text="Poción"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/pocionImage"/>
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/pocionImage"
                            android:src="@drawable/pocion"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/bayaCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bayaName"
                            android:text="Baya"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/bayaImage"/>
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/bayaImage"
                            android:src="@drawable/baya"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:id="@+id/row3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row2">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/magnesioCard"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/magnesioName"
                            android:text="Magnesio"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/magnesioImage"/>
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/magnesioImage"
                            android:src="@drawable/magnesio"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/escudoCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/escudoName"
                            android:text="Escudo"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/escudoImage"/>
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/escudoImage"
                            android:src="@drawable/escudo"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:id="@+id/row4"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row2">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/mariposaCard"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mariposaName"
                            android:text="Mariposa"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/mariposaImage"/>
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/mariposaImage"
                            android:src="@drawable/mariposa"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/randomCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/randomName"
                            android:text="Random"
                            android:textSize="20sp"
                            android:textColor="@color/lavender"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/randomImage"/>
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/randomImage"
                            android:src="@drawable/random"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ImageView
                android:layout_width="49dp"
                android:layout_height="36dp" app:srcCompat="@drawable/moneda" android:id="@+id/monedaImage"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="124dp" android:layout_marginEnd="216dp"/>
        <TextView
                android:text="Tu saldo: 00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/saldoText"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="129dp" android:layout_marginStart="27dp" android:textSize="20sp"/>
        <ImageButton
                android:id="@+id/volver4"
                android:layout_width="57dp"
                android:layout_height="45dp"
                android:contentDescription="Volver a Home"
                android:onClick="volver2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_revert" android:layout_marginTop="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>